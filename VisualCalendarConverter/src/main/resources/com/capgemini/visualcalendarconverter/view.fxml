<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.capgemini.visualcalendarconverter.Controller">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>

    <Label text="Enter full path to OLD calendar file"/>
    <TextField fx:id="oldPathTextField"></TextField>
    <Label text="Enter full path to NEW calendar file"/>
    <TextField fx:id="newPathTextField"></TextField>

    <Button text="Create import file" onAction="#onSubmit"/>
</VBox>
